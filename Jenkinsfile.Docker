pipeline {
	agent {
	    label 'jenkins && docker'
	}
	environment {
	    VHOST = "historischer-spieleabend.slothsoft.net"
	    SERVICE = "vhosts_historischer-spieleabend"
	}
    stages {
        stage('Build image and run tests') {
            steps {
                script {
                    docker.build("$VHOST:latest").inside {
                        sh 'composer install'
                        sh 'composer exec phpunit -- --log-junit report.xml'
                        junit 'report.xml'
                    }
                }
            }
        }
        stage('Deploy vhost') {
            steps {
                sh "docker service update $SERVICE"
            }
        }
    }
}